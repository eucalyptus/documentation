            <xmlcatalog refid="xhtml_dtd"/>
            <factory name="net.sf.saxon.TransformerFactoryImpl"/>
            <param name="BASEFOLDER" expression="${output.dir}"/>
            <mapper type="regexp" from="^(.*?)$$" to="\1.indexterms"/>
