<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE task PUBLIC "-//OASIS//DTD DITA Task//EN" "task.dtd">
<task id="cc_restart_clean">
	<title>Restart the CC (Clean)</title>
	<shortdesc/>
	<taskbody>
		<context>
			<p>To perform a clean restart:</p>
		</context>
		<steps>
			<step>
				<cmd>Log in to the CC and enter the following command:
				</cmd>
				<info>
					<codeblock>service eucalyptus-cc cleanrestart</codeblock>
				</info>
			</step>
		</steps>
	</taskbody>
</task>
