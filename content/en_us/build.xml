	<target name="copy_xhtml">
		<!-- Copy the generated XHTML files to the packages directory	-->
		
		<copy todir="${packages_www.dir}${file.separator}ag" overwrite="true"/>
		<fileset dir="${source.dir}${file.separator}en_us${file.separator}ag${file.separator}out${file.separator}xhtml${file.separator}ag">
			<include name="**/*.*"/>
		</fileset>
		
		<copy todir="${packages_www.dir}${file.separator}cli" overwrite="true"/>
		<fileset file="${source.dir}${file.separator}en_us${file.separator}cli${file.separator}out${file.separator}xhtml${file.separator}cli">
			<include name="**/*.*"/>
		</fileset>
		
		<copy todir="${packages_www.dir}${file.separator}fs" overwrite="true"/>
		<fileset file="${source.dir}${file.separator}en_us${file.separator}cli${file.separator}out${file.separator}xhtml${file.separator}fs">
			<include name="**/*.*"/>
		</fileset>
		
		<copy todir="${packages_www.dir}${file.separator}ig" overwrite="true"/>
		<fileset file="${source.dir}${file.separator}en_us${file.separator}cli${file.separator}out${file.separator}xhtml${file.separator}ig">
			<include name="**/*.*"/>
		</fileset>
		
		<copy todir="${packages_www.dir}${file.separator}ug" overwrite="true"/>
		<fileset file="${source.dir}${file.separator}en_us${file.separator}cli${file.separator}out${file.separator}xhtml${file.separator}ug">
			<include name="**/*.*"/>
		</fileset>
		
		<copy todir="${packages_www.dir}${file.separator}rn" overwrite="true"/>
		<fileset file="${source.dir}${file.separator}en_us${file.separator}cli${file.separator}out${file.separator}xhtml${file.separator}rn">
			<include name="**/*.*"/>
		</fileset>
		
	</target>
	
	<target name="all">
		<antcall target="pdf"/>
		<antcall target="xhtml"/>
	</target>
	
	<target name="clean" description="Clean all output directories">
		<ant antfile="build.xml" target="clean" dir="ag"/>
		<ant antfile="build.xml" target="clean" dir="cli"/>
		<ant antfile="build.xml" target="clean" dir="fs"/>
		<ant antfile="build.xml" target="clean" dir="ig"/>
		<ant antfile="build.xml" target="clean" dir="ug"/>
		<ant antfile="build.xml" target="clean" dir="rn"/>
	</target>
</project>
